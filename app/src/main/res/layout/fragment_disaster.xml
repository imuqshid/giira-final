<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar"
        xmlns:android="http://schemas.android.com/apk/res/android"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dissaster Forecast"
            android:id="@+id/disasterforecast" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weather Forecast"
            android:id="@+id/weatherforecast" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Path Prediction"
            android:id="@+id/userpathprediction" />

    </LinearLayout>

</LinearLayout>