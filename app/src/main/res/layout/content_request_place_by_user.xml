<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="gira.cdap.com.giira.request_place_by_user"
    tools:showIn="@layout/activity_request_place_by_user">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit your request for a new Place"
                android:id="@+id/textView13"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="20px"
                android:layout_height="30px" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter The Place Name"
                    android:id="@+id/textView14"
                    android:textSize="15dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Eg : Sigiriya"
                    android:id="@+id/etplace" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter The Description about place"
                    android:id="@+id/textView15"
                    android:textSize="15dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Eg : Sigiriya is an ancient rock fortress located in the central Matale District near the town of Dambulla in the Central Province, Sri Lanka."
                    android:id="@+id/etdisc" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter The Place&apos;s Address"
                    android:id="@+id/textView16"
                    android:textSize="15dp" />

                <AutoCompleteTextView

                    android:id="@+id/autoCompleteaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="15sp"
                    android:hint="Please enter your place" >
                </AutoCompleteTextView>


                <Space
                    android:layout_width="20px"
                    android:layout_height="20px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter The keyword about places"
                    android:id="@+id/textView17"
                    android:textSize="15dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Eg : Lion Rock,Rock Fortress,Rock,King Kasyapa"
                    android:id="@+id/ettype" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload the Place Image"
                    android:id="@+id/textView20" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/imageupload"
                            android:layout_marginTop="3dp"
                            android:id="@+id/plcimage"
                            android:onClick="uploadmultiimage"
                            />



                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">



                            <ImageButton
                                android:layout_width="80dp"
                                android:layout_height="150dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="0dp"
                                android:id="@+id/plcimage1"
                                android:visibility="invisible"
                                android:scaleType="fitXY"
                                />
                            <ImageButton
                                android:layout_width="80dp"
                                android:layout_height="150dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="0dp"
                                android:id="@+id/plcimage2"
                                android:visibility="invisible"
                                android:scaleType="fitXY"
                                />
                            <ImageButton
                                android:layout_width="80dp"
                                android:layout_height="150dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="0dp"
                                android:id="@+id/plcimage3"
                                android:visibility="invisible"
                                android:scaleType="fitXY"
                                />
                            <ImageButton
                                android:layout_width="80dp"
                                android:layout_height="150dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="0dp"
                                android:id="@+id/plcimage4"
                                android:visibility="invisible"
                                android:scaleType="fitXY"
                                />



                        </LinearLayout>



                    </RelativeLayout>

                </LinearLayout>



                <Space
                    android:layout_width="20px"
                    android:layout_height="40px" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit the Request"
                    android:onClick="request"
                    android:id="@+id/button3" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
