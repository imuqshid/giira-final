<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    tools:context="gira.cdap.com.giira.one_place">

    <com.github.ornolfr.ratingview.RatingView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/star"
        app:drawable_empty="@drawable/emptystar"
        app:drawable_filled="@drawable/fullstar"
        app:drawable_half="@drawable/halfstar"
        app:drawable_margin="4dp"
        app:drawable_size="24dp"
        app:is_indicator="true"
        app:max_count="5"
        app:rating="3.5" />

</LinearLayout>